<config-template xmlns="http://tail-f.com/ns/config/1.0"
                 servicepoint="dns">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{/name}</name>
      <config>
        <ip xmlns="urn:ios">
          <?if {starts-with(/name, 'c1')}?>
            <name-server>
              <name-server-list>
                <address>192.0.2.1</address>
              </name-server-list>
            </name-server>
          <?else?>
            <name-server>
              <name-server-list>
                <address>192.0.2.2</address>
              </name-server-list>
            </name-server>
          <?end?>
        </ip>
      </config>
    </device>
  </devices>
</config-template>
