<config-template xmlns="http://tail-f.com/ns/config/1.0"
                 servicepoint="dns">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <?foreach {/target-device}?>
    <device>
      <name>{.}</name>
      <config>
        <ip xmlns="urn:ios">
          <?if {/dns-server-ip}?>
            <!-- If dns-server-ip is set, use that. -->
            <name-server>
              <name-server-list>
                <address>{/dns-server-ip}</address>
              </name-server-list>
            </name-server>
          <?else?>
            <!-- Otherwise, use the default one. -->
            <name-server>
              <name-server-list>
                <address>192.0.2.1</address>
              </name-server-list>
            </name-server>
          <?end?>
        </ip>
      </config>
    </device>
    <?end?>
  </devices>
</config-template>
