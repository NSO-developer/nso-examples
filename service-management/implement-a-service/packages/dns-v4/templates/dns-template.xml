<config-template xmlns="http://tail-f.com/ns/config/1.0"
                 servicepoint="dns">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{/target-device}</name>
      <config>
        <ip xmlns="urn:ios">
          <name-server>
            <name-server-list>
              <address>{deref(/dns-servers)/../servers}</address>
            </name-server-list>
          </name-server>
        </ip>
      </config>
    </device>
  </devices>
</config-template>
